<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="5dp">
  <ImageView android:id="@+id/appDivider"        
    android:layout_alignParentTop="true"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@drawable/list_divider" />  
  <ImageView 
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:id="@+id/appIconx" 
    android:scaleType="centerInside"
    android:adjustViewBounds="false" 
    android:layout_below="@id/appDivider" />
  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appName" 
    android:layout_toRightOf="@id/appIconx" />
  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appThroughput"
    android:layout_below="@id/appName"
    android:layout_alignLeft="@id/appName" />
  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appPackets"
    android:layout_below="@id/appThroughput"
    android:layout_alignLeft="@id/appName" />
  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appBytes" 
    android:layout_below="@id/appPackets"
    android:layout_alignLeft="@id/appName" />
  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appLastTimestamp" 
    android:layout_below="@id/appBytes"
    android:layout_alignLeft="@id/appName" />
</RelativeLayout>
